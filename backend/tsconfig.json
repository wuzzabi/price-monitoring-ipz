{
  "compilerOptions": {
      "outDir": "./build",
      "target": "es5",
      "noImplicitAny": false,
      "sourceMap": true,
      "jsx": "preserve",
      "experimentalDecorators": true,
      "moduleResolution": "node",
      "removeComments": true,
      "baseUrl": "./src",
      "paths": {
        "@controllers/*": ["controllers/*"],
        "@exceptions/*": ["exceptions/*"],
        "@interfaces/*": ["interfaces/*"],
        "@middlewares/*": ["middlewares/*"],
        "@models/*": ["models/*"],
        "@routes/*": ["routes/*"],
        "@services/*": ["services/*"],
        "@helpers/*": ["helpers/*"]
      }
  },
  "lib": ["DOM", "es6"],
  "exclude": [
      "node_modules"
  ]
}